generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  CONTRIBUTOR
  LISTENER
}

enum PerformanceType {
  STUDIO
  LIVE
  COVER
  FOLK
  AMATEUR
}

enum PerformanceSource {
  YOUTUBE
  VK
  RUTUBE
  SOUNDCLOUD
  USER_UPLOAD
}

enum CollectionType {
  THEMATIC
  DECADE
  EXPERT
  COMMUNITY
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String?     @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          Role        @default(LISTENER)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  accounts      Account[]
  sessions      Session[]
  contributions Performance[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Song {
  id                String           @id @default(cuid())
  slug              String           @unique
  title             String
  originalTitle     String?
  era               String
  genre             String
  language          String
  summary           String
  lyrics            String           @db.Text
  chords            String           @db.Text
  defaultTempo      Int
  featuredImage     String?
  historicalContext String?          @db.Text
  tags              String[]         @default([])
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  performances      Performance[]
  collections       CollectionSong[]
}

model Performance {
  id           String             @id @default(cuid())
  songId       String
  title        String
  type         PerformanceType
  artists      String[]           @default([])
  year         Int
  duration     Int
  source       PerformanceSource
  sourceUrl    String
  quality      Json
  rating       Json
  context      String?            @db.Text
  highlights   String[]           @default([])
  tempoBpm     Int?
  arrangement  String?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  curatorId    String?
  curator      User?              @relation(fields: [curatorId], references: [id], onDelete: SetNull)
  song         Song               @relation(fields: [songId], references: [id], onDelete: Cascade)
}

model Collection {
  id              String           @id @default(cuid())
  slug            String           @unique
  title           String
  description     String
  featuredSongIds String[]         @default([])
  curator         String
  type            CollectionType
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  songs           CollectionSong[]
}

model CollectionSong {
  collectionId String
  songId       String
  position     Int        @default(0)
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  song         Song       @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@id([collectionId, songId])
}
